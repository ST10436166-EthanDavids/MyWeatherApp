<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A79D6"
    tools:context=".MainScreenActivity">

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="16dp"
        android:text="exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day6" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_view_details"
        app:layout_constraintTop_toBottomOf="@+id/avg_temperature" />

    <Button
        android:id="@+id/btn_view_details"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="View Conditions"
        app:layout_constraintEnd_toStartOf="@+id/btn_exit"
        app:layout_constraintTop_toBottomOf="@+id/avg_temperature" />

    <TextView
        android:id="@+id/avg_temperature"
        android:layout_width="239dp"
        android:layout_height="33dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="164dp"
        android:text="Average Temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day7" />

    <EditText
        android:id="@+id/edit_day1"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 1 Data (e.g., Monday, 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_day2"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 2 Data (e.g., Tuesday, 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day1" />

    <EditText
        android:id="@+id/edit_day3"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 3 Data (e.g., Wednesday, 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day2" />

    <EditText
        android:id="@+id/edit_day4"
        android:layout_width="296dp"
        android:layout_height="53dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 4 Data (e.g., thursday 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day3" />

    <EditText
        android:id="@+id/edit_day5"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 5 Data (e.g., Friday, 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day4" />

    <EditText
        android:id="@+id/edit_day6"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="103dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 6 Data (e.g., Saturday, 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day5" />

    <EditText
        android:id="@+id/edit_day7"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="114dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day 7 Data (e.g., Sunday, 12, 20, etc.)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_day6" />

</androidx.constraintlayout.widget.ConstraintLayout>